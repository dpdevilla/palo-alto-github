{%- comment -%}
  Renders share button for featured product section, product page and article page

  Accepts:
  - text: {String} Share button text. Default: "Share"
  - link: {String} URL that will be shared (Optional)
  - animation_anchor: {String} link the animation to an ID,
  - animation_delay: {Number} sets the animation delay

  Usage:
  {%- render 'share-button', text: text, link: link
  -%}
{%- endcomment -%}
{%- assign animations_enabled = settings.animations_enabled -%}

<script src="{{ 'share-button.js' | asset_url }}" defer="defer"></script>

<share-button
  class="share-button"
  {% if animations_enabled %}
    data-aos="fade-up"
    data-aos-anchor="{{ animation_anchor }}"
    data-aos-delay="{{ animation_delay }}"
  {% endif %}
>
  <button
    class="btn btn--text share-link"
    {% if link != blank %}
      data-share-link="{{ link }}"
    {% endif %}
    data-share-button
  >
    <tooltip-component
      data-tooltip="{{- 'general.accessibility.link_copied' | t -}}"
      data-tooltip-stop-mouseenter
    >
      {%- render 'icon-share' -%}
      {{- text -}}
    </tooltip-component>
  </button>
</share-button>
