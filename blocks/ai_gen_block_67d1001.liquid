{% doc %}
  @prompt
    3.	Product Spotlight
    o	Combination of lifestyle + product images
    o	Benefit bullet points (not just features)
    o	Show price + any limited-time promo
    , this is good the layout but i need to get the product features on the product inside the shopify not image also the price and CTA button
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-spotlight-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-product-spotlight-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.content_gap }}px;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-product-spotlight-images-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.image_gap }}px;
    height: 100%;
  }

  .ai-product-spotlight-lifestyle-{{ ai_gen_id }} {
    grid-column: 1 / 3;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    aspect-ratio: {{ block.settings.lifestyle_aspect_ratio }};
  }

  .ai-product-spotlight-lifestyle-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-spotlight-product-images-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.image_gap }}px;
    grid-column: 1 / 3;
  }

  .ai-product-spotlight-product-image-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    aspect-ratio: 1;
  }

  .ai-product-spotlight-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-spotlight-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-product-spotlight-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    margin: 0 0 {{ block.settings.element_spacing }}px;
    line-height: 1.2;
  }

  .ai-product-spotlight-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin-bottom: {{ block.settings.element_spacing }}px;
  }

  .ai-product-spotlight-benefits-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.element_spacing }}px;
  }

  .ai-product-spotlight-benefit-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 12px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
  }

  .ai-product-spotlight-benefit-icon-{{ ai_gen_id }} {
    color: {{ block.settings.accent_color }};
    flex-shrink: 0;
    margin-top: 2px;
  }

  .ai-product-spotlight-pricing-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.element_spacing }}px;
  }

  .ai-product-spotlight-price-{{ ai_gen_id }} {
    color: {{ block.settings.price_color }};
    font-size: {{ block.settings.price_size }}px;
    font-weight: 700;
    margin-bottom: 8px;
  }

  .ai-product-spotlight-compare-price-{{ ai_gen_id }} {
    color: {{ block.settings.compare_price_color }};
    font-size: {{ block.settings.compare_price_size }}px;
    text-decoration: line-through;
    margin-right: 8px;
  }

  .ai-product-spotlight-promo-{{ ai_gen_id }} {
    background-color: {{ block.settings.promo_bg_color }};
    color: {{ block.settings.promo_text_color }};
    padding: 8px 12px;
    border-radius: {{ block.settings.promo_border_radius }}px;
    font-size: {{ block.settings.promo_text_size }}px;
    font-weight: 600;
    display: inline-block;
    margin-bottom: {{ block.settings.element_spacing }}px;
  }

  .ai-product-spotlight-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 1.5 }}px;
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-product-spotlight-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .ai-product-spotlight-image-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-product-spotlight-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-spotlight-empty-state-{{ ai_gen_id }} {
    text-align: center;
    color: #666;
    font-style: italic;
    padding: 40px 20px;
  }

  @media screen and (max-width: 768px) {
    .ai-product-spotlight-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.content_gap | times: 0.75 }}px;
    }

    .ai-product-spotlight-images-{{ ai_gen_id }} {
      {% if block.settings.mobile_images_first %}order: 1;{% else %}order: 2;{% endif %}
    }

    .ai-product-spotlight-content-{{ ai_gen_id }} {
      {% if block.settings.mobile_images_first %}order: 2;{% else %}order: 1;{% endif %}
      padding: {{ block.settings.content_padding | times: 0.75 }}px;
    }

    .ai-product-spotlight-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }

    .ai-product-spotlight-product-images-{{ ai_gen_id }} {
      grid-template-columns: {% if block.settings.mobile_product_columns == '1' %}1fr{% else %}1fr 1fr{% endif %};
    }
  }
{% endstyle %}

<div
  class="ai-product-spotlight-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.featured_product %}
    {% assign product = block.settings.featured_product %}
    
    <div class="ai-product-spotlight-container-{{ ai_gen_id }}">
      <div class="ai-product-spotlight-images-{{ ai_gen_id }}">
        <div class="ai-product-spotlight-lifestyle-{{ ai_gen_id }}">
          {% if block.settings.lifestyle_image %}
            <img
              src="{{ block.settings.lifestyle_image | image_url: width: 800 }}"
              alt="{{ block.settings.lifestyle_image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.lifestyle_image.width }}"
              height="{{ block.settings.lifestyle_image.height }}"
            >
          {% elsif product.featured_image %}
            <img
              src="{{ product.featured_image | image_url: width: 800 }}"
              alt="{{ product.featured_image.alt | escape }}"
              loading="lazy"
              width="{{ product.featured_image.width }}"
              height="{{ product.featured_image.height }}"
            >
          {% else %}
            <div class="ai-product-spotlight-image-placeholder-{{ ai_gen_id }}">
              {{ 'hero-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        <div class="ai-product-spotlight-product-images-{{ ai_gen_id }}">
          {% assign product_images = product.images | slice: 1, 2 %}
          {% for image in product_images %}
            <div class="ai-product-spotlight-product-image-{{ ai_gen_id }}">
              <img
                src="{{ image | image_url: width: 400 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
              >
            </div>
          {% endfor %}
          
          {% if product_images.size < 2 %}
            {% for i in (1..2) %}
              {% unless forloop.index <= product_images.size %}
                <div class="ai-product-spotlight-product-image-{{ ai_gen_id }}">
                  <div class="ai-product-spotlight-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-apparel-1' | placeholder_svg_tag }}
                  </div>
                </div>
              {% endunless %}
            {% endfor %}
          {% endif %}
        </div>
      </div>

      <div class="ai-product-spotlight-content-{{ ai_gen_id }}">
        <h2 class="ai-product-spotlight-title-{{ ai_gen_id }}">{{ product.title }}</h2>

        {% if block.settings.show_description and product.description != blank %}
          <div class="ai-product-spotlight-description-{{ ai_gen_id }}">
            {{ product.description | truncate: block.settings.description_length }}
          </div>
        {% endif %}

        {% assign features_metafield = product.metafields[block.settings.features_namespace][block.settings.features_key] %}
        {% if features_metafield != blank %}
          <div class="ai-product-spotlight-benefits-{{ ai_gen_id }}">
            {% assign features_list = features_metafield | split: '|' %}
            {% for feature in features_list limit: 3 %}
              {% if feature != blank %}
                <div class="ai-product-spotlight-benefit-{{ ai_gen_id }}">
                  <div class="ai-product-spotlight-benefit-icon-{{ ai_gen_id }}">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="20,6 9,17 4,12"></polyline>
                    </svg>
                  </div>
                  <span>{{ feature | strip }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% elsif block.settings.fallback_benefit_1 != blank or block.settings.fallback_benefit_2 != blank or block.settings.fallback_benefit_3 != blank %}
          <div class="ai-product-spotlight-benefits-{{ ai_gen_id }}">
            {% for i in (1..3) %}
              {% liquid
                assign benefit_key = 'fallback_benefit_' | append: i
                assign benefit = block.settings[benefit_key]
              %}
              {% if benefit != blank %}
                <div class="ai-product-spotlight-benefit-{{ ai_gen_id }}">
                  <div class="ai-product-spotlight-benefit-icon-{{ ai_gen_id }}">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="20,6 9,17 4,12"></polyline>
                    </svg>
                  </div>
                  <span>{{ benefit }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}

        <div class="ai-product-spotlight-pricing-{{ ai_gen_id }}">
          {% if product.compare_at_price > product.price %}
            <div class="ai-product-spotlight-price-{{ ai_gen_id }}">
              <span class="ai-product-spotlight-compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
              {{ product.price | money }}
            </div>
          {% else %}
            <div class="ai-product-spotlight-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
          {% endif %}
        </div>

        {% if block.settings.promo_text != blank %}
          <div class="ai-product-spotlight-promo-{{ ai_gen_id }}">
            {{ block.settings.promo_text }}
          </div>
        {% endif %}

        <a
          href="{{ product.url }}"
          class="ai-product-spotlight-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      </div>
    </div>
  {% else %}
    <div class="ai-product-spotlight-empty-state-{{ ai_gen_id }}">
      <p>Please select a product to showcase in this spotlight.</p>
    </div>
  {% endif %}
</div>

