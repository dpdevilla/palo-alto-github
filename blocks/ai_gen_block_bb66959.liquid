{% doc %}
  @prompt
    11.	Final Call-to-Action
    •	Hero-style banner (Iza + featured product)
    •	Strong button: Buy Now / Add to Cart
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-cta-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    min-height: {{ block.settings.section_height }}px;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
  }

  .ai-hero-cta-container-{{ ai_gen_id }} {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .ai-hero-cta-content-{{ ai_gen_id }} {
    z-index: 2;
  }

  .ai-hero-cta-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    color: {{ block.settings.text_color }};
    margin: 0 0 20px;
    line-height: 1.2;
  }

  .ai-hero-cta-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 30px;
    line-height: 1.4;
    opacity: 0.9;
  }

  .ai-hero-cta-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 1.5 }}px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: {% if block.settings.button_uppercase %}uppercase{% else %}none{% endif %};
    letter-spacing: {% if block.settings.button_uppercase %}1px{% else %}0{% endif %};
  }

  .ai-hero-cta-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .ai-hero-cta-image-section-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-cta-main-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .ai-hero-cta-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 400px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-cta-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-hero-cta-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-hero-cta-product-card-{{ ai_gen_id }} {
    position: absolute;
    bottom: -20px;
    right: -20px;
    background-color: {{ block.settings.product_card_bg }};
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    max-width: 280px;
    z-index: 3;
  }

  .ai-hero-cta-product-image-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    border-radius: 8px;
    object-fit: cover;
    margin-bottom: 12px;
  }

  .ai-hero-cta-product-image-placeholder-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    background-color: #f4f4f4;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 12px;
  }

  .ai-hero-cta-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
    opacity: 0.5;
  }

  .ai-hero-cta-product-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.product_card_text }};
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .ai-hero-cta-product-price-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 700;
    color: {{ block.settings.product_card_text }};
    margin-bottom: 12px;
  }

  .ai-hero-cta-product-button-{{ ai_gen_id }} {
    width: 100%;
    padding: 10px 16px;
    background-color: {{ block.settings.product_button_color }};
    color: {{ block.settings.product_button_text }};
    border: none;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .ai-hero-cta-product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.product_button_hover }};
    transform: translateY(-1px);
  }

  .ai-hero-cta-empty-product-{{ ai_gen_id }} {
    font-size: 14px;
    color: #999;
    text-align: center;
    padding: 20px;
    font-style: italic;
  }

  @media screen and (max-width: 768px) {
    .ai-hero-cta-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .ai-hero-cta-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-hero-cta-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-hero-cta-product-card-{{ ai_gen_id }} {
      position: static;
      margin-top: 20px;
      max-width: 100%;
    }

    .ai-hero-cta-{{ ai_gen_id }} {
      min-height: auto;
    }
  }
{% endstyle %}

<div
  class="ai-hero-cta-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-hero-cta-container-{{ ai_gen_id }}">
    <div class="ai-hero-cta-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-cta-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-hero-cta-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
      {% endif %}

      {% if block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link | default: '#' }}"
          class="ai-hero-cta-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <div class="ai-hero-cta-image-section-{{ ai_gen_id }}">
      {% if block.settings.hero_image %}
        <img
          src="{{ block.settings.hero_image | image_url: width: 800 }}"
          alt="{{ block.settings.hero_image.alt | escape }}"
          class="ai-hero-cta-main-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.hero_image.width }}"
          height="{{ block.settings.hero_image.height }}"
        >
      {% else %}
        <div class="ai-hero-cta-image-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
          <div class="ai-hero-cta-empty-state-{{ ai_gen_id }}">
            Add a hero image
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_product_card %}
        <div class="ai-hero-cta-product-card-{{ ai_gen_id }}">
          {% if block.settings.featured_product != blank %}
            {% assign product = block.settings.featured_product %}
            
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 160 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-hero-cta-product-image-{{ ai_gen_id }}"
                loading="lazy"
                width="160"
                height="160"
              >
            {% else %}
              <div class="ai-hero-cta-product-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}

            <h3 class="ai-hero-cta-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
            <div class="ai-hero-cta-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
            
            <a
              href="{{ product.url }}"
              class="ai-hero-cta-product-button-{{ ai_gen_id }}"
            >
              {{ block.settings.product_cta_text }}
            </a>
          {% else %}
            <div class="ai-hero-cta-empty-product-{{ ai_gen_id }}">
              Select a featured product
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

