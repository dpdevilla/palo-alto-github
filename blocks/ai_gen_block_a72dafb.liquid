{% doc %}
  @prompt
    Why Choose Pili Ani? (Section Layout)
    1. Section Title (Centered, Bold)
    
    ‚ÄúWhy Choose Pili Ani?‚Äù
    
    2. Short Intro Line (1‚Äì2 sentences, centered)
    
    Example: ‚ÄúRooted in nature, backed by science, and proudly Filipino ‚Äî discover what makes Pili Ani different.‚Äù
    
    3. Content Layout Options
    Option A ‚Äì Icon Grid (most common, clean)
    
    3 or 4 columns with icons + short headlines + 1‚Äì2 lines description
    
    üåø Sustainably Sourced ‚Äì Pili oils harvested from local farms
    
    üíß All-Natural Ingredients ‚Äì No harmful chemicals, pure botanicals
    
    üáµüá≠ Proudly Filipino ‚Äì Supporting local communities and heritage
    
    üåü Proven Results ‚Äì Trusted by dermatologists and beauty lovers
    
    Option B ‚Äì Split Image + Text
    
    Left side: Lifestyle/product image
    
    Right side: Bulleted list of 3‚Äì4 reasons (with small icons)
    
    4. Visual Style Suggestions
    
    Use soft background color (light beige or pale green) to differentiate from the other sections.
    
    Rounded icon styles or line illustrations for consistency with brand visuals.
    
    Keep text short, scannable, and benefit-driven (not just features).
    
    5. CTA (Optional, Below Section)
    
    Example: ‚ÄúExperience the Pili Ani difference today.‚Äù
    
    Button: Shop Now
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-why-choose-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-why-choose-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-why-choose-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-why-choose-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: bold;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    line-height: 1.2;
  }

  .ai-why-choose-intro-{{ ai_gen_id }} {
    font-size: {{ block.settings.intro_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0.8;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.5;
  }

  .ai-why-choose-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: {{ block.settings.cta_spacing }}px;
  }

  .ai-why-choose-item-{{ ai_gen_id }} {
    text-align: center;
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-why-choose-item-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-why-choose-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto {{ block.settings.icon_spacing }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ block.settings.icon_size | times: 0.5 }}px;
  }

  .ai-why-choose-item-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.item_title_spacing }}px;
    line-height: 1.3;
  }

  .ai-why-choose-item-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_description_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0;
    line-height: 1.5;
  }

  .ai-why-choose-cta-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-why-choose-cta-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.cta_text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.cta_text_spacing }}px;
    opacity: 0.9;
  }

  .ai-why-choose-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_background_color }};
  }

  .ai-why-choose-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_background_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .ai-why-choose-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.8 }}px;
    }

    .ai-why-choose-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-why-choose-intro-{{ ai_gen_id }} {
      font-size: {{ block.settings.intro_size | times: 0.9 }}px;
    }

    .ai-why-choose-item-{{ ai_gen_id }} {
      padding: {{ block.settings.item_padding | times: 0.8 }}px;
    }

    .ai-why-choose-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
      font-size: {{ block.settings.icon_size | times: 0.4 }}px;
    }
  }
{% endstyle %}

<div class="ai-why-choose-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-why-choose-container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank or block.settings.section_intro != blank %}
      <div class="ai-why-choose-header-{{ ai_gen_id }}">
        {% if block.settings.section_title != blank %}
          <h2 class="ai-why-choose-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
        {% endif %}
        {% if block.settings.section_intro != blank %}
          <p class="ai-why-choose-intro-{{ ai_gen_id }}">{{ block.settings.section_intro }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-why-choose-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign item_enabled_key = 'item_' | append: i | append: '_enabled'
          assign item_icon_key = 'item_' | append: i | append: '_icon'
          assign item_title_key = 'item_' | append: i | append: '_title'
          assign item_description_key = 'item_' | append: i | append: '_description'

          assign item_enabled = block.settings[item_enabled_key]
          assign item_icon = block.settings[item_icon_key]
          assign item_title = block.settings[item_title_key]
          assign item_description = block.settings[item_description_key]
        %}

        {% if item_enabled and item_title != blank %}
          <div class="ai-why-choose-item-{{ ai_gen_id }}">
            {% if item_icon != blank %}
              <div class="ai-why-choose-icon-{{ ai_gen_id }}">
                {{ item_icon }}
              </div>
            {% endif %}
            <h3 class="ai-why-choose-item-title-{{ ai_gen_id }}">{{ item_title }}</h3>
            {% if item_description != blank %}
              <p class="ai-why-choose-item-description-{{ ai_gen_id }}">{{ item_description }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_cta %}
      <div class="ai-why-choose-cta-{{ ai_gen_id }}">
        {% if block.settings.cta_text != blank %}
          <p class="ai-why-choose-cta-text-{{ ai_gen_id }}">{{ block.settings.cta_text }}</p>
        {% endif %}
        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-why-choose-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

