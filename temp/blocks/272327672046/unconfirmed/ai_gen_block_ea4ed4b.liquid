{% doc %}
  @prompt
    2.	Influencer Endorsement
    o	Short personal story or testimonial from Iza
    o	Optional: short video clip
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-influencer-endorsement-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-influencer-endorsement__container-{{ ai_gen_id }} {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-influencer-endorsement__header-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 8px;
  }

  .ai-influencer-endorsement__avatar-{{ ai_gen_id }} {
    width: {{ block.settings.avatar_size }}px;
    height: {{ block.settings.avatar_size }}px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-influencer-endorsement__avatar-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-influencer-endorsement__avatar-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-influencer-endorsement__avatar-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-influencer-endorsement__info-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-influencer-endorsement__name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 4px;
    line-height: 1.2;
  }

  .ai-influencer-endorsement__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    opacity: 0.8;
    line-height: 1.3;
  }

  .ai-influencer-endorsement__content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ai-influencer-endorsement__video-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.video_border_radius }}px;
    overflow: hidden;
    background-color: #000;
    aspect-ratio: 16/9;
  }

  .ai-influencer-endorsement__video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-influencer-endorsement__video-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 12px;
    color: #666;
  }

  .ai-influencer-endorsement__video-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.5;
  }

  .ai-influencer-endorsement__testimonial-{{ ai_gen_id }} {
    font-size: {{ block.settings.testimonial_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    font-style: {{ block.settings.testimonial_style }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-influencer-endorsement__testimonial-{{ ai_gen_id }} p {
    margin: 0 0 16px;
  }

  .ai-influencer-endorsement__testimonial-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-influencer-endorsement__quote-mark-{{ ai_gen_id }} {
    font-size: {{ block.settings.testimonial_size | times: 2 }}px;
    color: {{ block.settings.quote_color }};
    line-height: 1;
    margin-bottom: 8px;
    display: block;
  }

  .ai-influencer-endorsement__social-links-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    align-items: center;
    margin-top: 8px;
  }

  .ai-influencer-endorsement__social-link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: {{ block.settings.social_bg_color }};
    color: {{ block.settings.social_icon_color }};
    text-decoration: none;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }

  .ai-influencer-endorsement__social-link-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
    opacity: 0.8;
  }

  .ai-influencer-endorsement__social-link-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
  }

  @media screen and (max-width: 749px) {
    .ai-influencer-endorsement-{{ ai_gen_id }} {
      padding: 24px 16px;
    }

    .ai-influencer-endorsement__header-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
      gap: 12px;
    }

    .ai-influencer-endorsement__content-{{ ai_gen_id }} {
      gap: 16px;
    }

    .ai-influencer-endorsement__name-{{ ai_gen_id }} {
      font-size: {{ block.settings.name_size | times: 0.9 }}px;
    }

    .ai-influencer-endorsement__testimonial-{{ ai_gen_id }} {
      font-size: {{ block.settings.testimonial_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-influencer-endorsement-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-influencer-endorsement__container-{{ ai_gen_id }}">
    <div class="ai-influencer-endorsement__header-{{ ai_gen_id }}">
      <div class="ai-influencer-endorsement__avatar-{{ ai_gen_id }}">
        {% if block.settings.influencer_image %}
          <img
            src="{{ block.settings.influencer_image | image_url: width: 200 }}"
            alt="{{ block.settings.influencer_name | escape }}"
            loading="lazy"
            width="200"
            height="200"
          >
        {% else %}
          <div class="ai-influencer-endorsement__avatar-placeholder-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
          </div>
        {% endif %}
      </div>

      <div class="ai-influencer-endorsement__info-{{ ai_gen_id }}">
        {% if block.settings.influencer_name != blank %}
          <h3 class="ai-influencer-endorsement__name-{{ ai_gen_id }}">{{ block.settings.influencer_name }}</h3>
        {% endif %}
        
        {% if block.settings.influencer_title != blank %}
          <p class="ai-influencer-endorsement__title-{{ ai_gen_id }}">{{ block.settings.influencer_title }}</p>
        {% endif %}

        {% if block.settings.instagram_handle != blank or block.settings.tiktok_handle != blank or block.settings.youtube_handle != blank %}
          <div class="ai-influencer-endorsement__social-links-{{ ai_gen_id }}">
            {% if block.settings.instagram_handle != blank %}
              <a
                href="https://instagram.com/{{ block.settings.instagram_handle }}"
                class="ai-influencer-endorsement__social-link-{{ ai_gen_id }}"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow {{ block.settings.influencer_name }} on Instagram"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                  <path d="m16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                </svg>
              </a>
            {% endif %}

            {% if block.settings.tiktok_handle != blank %}
              <a
                href="https://tiktok.com/@{{ block.settings.tiktok_handle }}"
                class="ai-influencer-endorsement__social-link-{{ ai_gen_id }}"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow {{ block.settings.influencer_name }} on TikTok"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                </svg>
              </a>
            {% endif %}

            {% if block.settings.youtube_handle != blank %}
              <a
                href="https://youtube.com/@{{ block.settings.youtube_handle }}"
                class="ai-influencer-endorsement__social-link-{{ ai_gen_id }}"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow {{ block.settings.influencer_name }} on YouTube"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path>
                  <polygon points="9.75,15.02 15.5,11.75 9.75,8.48"></polygon>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-influencer-endorsement__content-{{ ai_gen_id }}">
      {% if block.settings.show_video and block.settings.video_file %}
        <div class="ai-influencer-endorsement__video-container-{{ ai_gen_id }}">
          <video
            class="ai-influencer-endorsement__video-{{ ai_gen_id }}"
            controls
            {% if block.settings.video_autoplay %}autoplay muted{% endif %}
            {% if block.settings.video_loop %}loop{% endif %}
            preload="metadata"
          >
            <source src="{{ block.settings.video_file }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        </div>
      {% elsif block.settings.show_video %}
        <div class="ai-influencer-endorsement__video-container-{{ ai_gen_id }}">
          <div class="ai-influencer-endorsement__video-placeholder-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="5,3 19,12 5,21"></polygon>
            </svg>
            <span>Add a video file</span>
          </div>
        </div>
      {% endif %}

      {% if block.settings.testimonial != blank %}
        <div class="ai-influencer-endorsement__testimonial-{{ ai_gen_id }}">
          {% if block.settings.show_quote_marks %}
            <span class="ai-influencer-endorsement__quote-mark-{{ ai_gen_id }}">"</span>
          {% endif %}
          {{ block.settings.testimonial }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Influencer endorsement",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Influencer details"
    },
    {
      "type": "image_picker",
      "id": "influencer_image",
      "label": "Influencer photo"
    },
    {
      "type": "text",
      "id": "influencer_name",
      "label": "Influencer name",
      "default": "Iza Calzado"
    },
    {
      "type": "text",
      "id": "influencer_title",
      "label": "Title or description",
      "default": "Actress & Wellness Advocate"
    },
    {
      "type": "header",
      "content": "Social media"
    },
    {
      "type": "text",
      "id": "instagram_handle",
      "label": "Instagram handle",
      "info": "Enter without @ symbol"
    },
    {
      "type": "text",
      "id": "tiktok_handle",
      "label": "TikTok handle",
      "info": "Enter without @ symbol"
    },
    {
      "type": "text",
      "id": "youtube_handle",
      "label": "YouTube handle",
      "info": "Enter without @ symbol"
    },
    {
      "type": "header",
      "content": "Video content"
    },
    {
      "type": "checkbox",
      "id": "show_video",
      "label": "Show video",
      "default": false
    },
    {
      "type": "url",
      "id": "video_file",
      "label": "Video file URL"
    },
    {
      "type": "checkbox",
      "id": "video_autoplay",
      "label": "Autoplay video",
      "default": false,
      "info": "Videos will be muted when autoplaying"
    },
    {
      "type": "checkbox",
      "id": "video_loop",
      "label": "Loop video",
      "default": false
    },
    {
      "type": "header",
      "content": "Testimonial"
    },
    {
      "type": "richtext",
      "id": "testimonial",
      "label": "Testimonial text",
      "default": "<p>I've been using Pili Ani products for months now, and I can honestly say they've transformed my skincare routine. The natural ingredients make my skin feel so nourished and healthy. As someone who's always in front of cameras, having products I can trust is essential.</p>"
    },
    {
      "type": "checkbox",
      "id": "show_quote_marks",
      "label": "Show quotation marks",
      "default": true
    },
    {
      "type": "select",
      "id": "testimonial_style",
      "label": "Testimonial style",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "italic",
          "label": "Italic"
        }
      ],
      "default": "italic"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#fff7f2"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#0b0b0b"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "quote_color",
      "label": "Quote mark color",
      "default": "#de5757"
    },
    {
      "type": "color",
      "id": "social_bg_color",
      "label": "Social icon background",
      "default": "#0b0b0b"
    },
    {
      "type": "color",
      "id": "social_icon_color",
      "label": "Social icon color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 12
    },
    {
      "type": "range",
      "id": "video_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Video border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "avatar_size",
      "min": 40,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Avatar size",
      "default": 80
    },
    {
      "type": "range",
      "id": "name_size",
      "min": 14,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Name size",
      "default": 20
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Title size",
      "default": 14
    },
    {
      "type": "range",
      "id": "testimonial_size",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Testimonial size",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Influencer endorsement"
    }
  ]
}
{% endschema %}