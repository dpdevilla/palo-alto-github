  }

  .ai-urgency-countdown-number-{{ ai_gen_id }} {
    font-size: {{ block.settings.countdown_number_size }}px;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 5px;
    display: block;
  }

  .ai-urgency-countdown-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.countdown_label_size }}px;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0.8;
  }

  .ai-urgency-offer-details-{{ ai_gen_id }} {
    background-color: {{ block.settings.offer_bg_color }};
    padding: 30px;
    border-radius: {{ block.settings.offer_border_radius }}px;
    margin-bottom: 30px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
