    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    position: relative;
    overflow: hidden;
  }

  .ai-urgency-offer-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: {{ block.settings.background_gradient }};
    z-index: 1;
  }

  .ai-urgency-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    text-align: center;
    position: relative;
    z-index: 2;
  }

  .ai-urgency-badge-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.badge_bg_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 8px 20px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: {{ block.settings.badge_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 20px;
    animation: pulse-{{ ai_gen_id }} 2s infinite;
  }

  @keyframes pulse-{{ ai_gen_id }} {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .ai-urgency-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 15px;
    color: {{ block.settings.text_color }};
  }

  .ai-urgency-subheading-{{ ai_gen_id }} {
