{% doc %}
  @prompt
    1.	Hero Section (Image or Video, above the fold)
    o	Strong headline
    o	Clear CTA button
    2.	Influencer Endorsement
    o	Short personal story or testimonial from Iza
    o	Optional: short video clip
    3.	Product Spotlight
    o	Combination of lifestyle + product images
    o	Benefit bullet points (not just features)
    o	Show price + any limited-time promo
    4.	Result: Before & After Section
    5.	Social Proof
    o	Customer reviews with star ratings
    o	User-generated content (UGC) or influencer-tagged posts
    6.	Key Ingredients & Benefits
    7.	How to Use
    o	Step-by-step directions
    o	Add icons or images for clarity
    8.	Limited-Time Offer / Urgency
    o	Example: “Get 15% off today – while stocks last.”
    o	Option to add countdown timer
    9.	FAQ Section (Optional)
    10.	Final Call-to-Action
    •	Hero-style banner (Iza + featured product)
    •	Strong button: Buy Now / Add to Cart
    
    Note: Since the landing page is quite long, we’ll add a sticky “Add to Cart” button so it’s always visible as the customer scrolls down.
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-final-cta-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.section_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-final-cta-media-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-final-cta-media-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-final-cta-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    z-index: 2;
  }

  .ai-final-cta-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: center;
    max-width: {{ block.settings.content_width }}px;
    padding: 40px 20px;
    color: {{ block.settings.text_color }};
  }

  .ai-final-cta-badge-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.badge_bg_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 8px 20px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: {{ block.settings.badge_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 20px;
  }

  .ai-final-cta-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 20px;
    color: {{ block.settings.text_color }};
  }

  .ai-final-cta-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.4;
    margin: 0 0 30px;
    color: {{ block.settings.text_color }};
    opacity: 0.9;
  }

  .ai-final-cta-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  .ai-final-cta-primary-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.primary_button_padding_vertical }}px {{ block.settings.primary_button_padding_horizontal }}px;
    background-color: {{ block.settings.primary_button_bg_color }};
    color: {{ block.settings.primary_button_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.primary_button_text_size }}px;
    font-weight: 700;
    border-radius: {{ block.settings.primary_button_border_radius }}px;
    transition: all 0.3s ease;
    text-transform: {% if block.settings.primary_button_uppercase %}uppercase{% else %}none{% endif %};
    letter-spacing: {% if block.settings.primary_button_uppercase %}1px{% else %}0{% endif %};
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    position: relative;
    overflow: hidden;
  }

  .ai-final-cta-primary-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s;
  }

  .ai-final-cta-primary-{{ ai_gen_id }}:hover::before {
    left: 100%;
  }

  .ai-final-cta-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg_color }};
    color: {{ block.settings.primary_button_hover_text_color }};
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
  }

  .ai-final-cta-secondary-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.secondary_button_padding_vertical }}px {{ block.settings.secondary_button_padding_horizontal }}px;
    background-color: {{ block.settings.secondary_button_bg_color }};
    color: {{ block.settings.secondary_button_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.secondary_button_text_size }}px;
    font-weight: 600;
    border: 2px solid {{ block.settings.secondary_button_border_color }};
    border-radius: {{ block.settings.secondary_button_border_radius }}px;
    transition: all 0.3s ease;
    text-transform: {% if block.settings.secondary_button_uppercase %}uppercase{% else %}none{% endif %};
    letter-spacing: {% if block.settings.secondary_button_uppercase %}1px{% else %}0{% endif %};
  }

  .ai-final-cta-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_bg_color }};
    color: {{ block.settings.secondary_button_hover_text_color }};
    border-color: {{ block.settings.secondary_button_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-final-cta-guarantee-{{ ai_gen_id }} {
    margin-top: 30px;
    font-size: {{ block.settings.guarantee_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .ai-final-cta-guarantee-icon-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    color: {{ block.settings.guarantee_icon_color }};
  }

  .ai-final-cta-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-final-cta-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-final-cta-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_height }}px;
    }

    .ai-final-cta-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.8 }}px;
    }

    .ai-final-cta-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-final-cta-content-{{ ai_gen_id }} {
      padding: 20px 15px;
      max-width: 100%;
    }

    .ai-final-cta-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 15px;
    }

    .ai-final-cta-primary-{{ ai_gen_id }},
    .ai-final-cta-secondary-{{ ai_gen_id }} {
      width: 100%;
      max-width: 300px;
    }
  }
{% endstyle %}

<div class="ai-final-cta-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.background_image %}
    <div class="ai-final-cta-media-{{ ai_gen_id }}">
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    </div>
  {% else %}
    <div class="ai-final-cta-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
      <div class="ai-final-cta-empty-state-{{ ai_gen_id }}">
        Add a background image
      </div>
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-final-cta-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-final-cta-content-{{ ai_gen_id }}">
    {% if block.settings.badge_text != blank %}
      <div class="ai-final-cta-badge-{{ ai_gen_id }}">{{ block.settings.badge_text }}</div>
    {% endif %}

    {% if block.settings.headline != blank %}
      <h2 class="ai-final-cta-headline-{{ ai_gen_id }}">{{ block.settings.headline }}</h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-final-cta-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    <div class="ai-final-cta-buttons-{{ ai_gen_id }}">
      {% if block.settings.primary_button_text != blank %}
        <a
          href="{{ block.settings.primary_button_link }}"
          class="ai-final-cta-primary-{{ ai_gen_id }}"
        >
          {{ block.settings.primary_button_text }}
        </a>
      {% endif %}

      {% if block.settings.secondary_button_text != blank %}
        <a
          href="{{ block.settings.secondary_button_link }}"
          class="ai-final-cta-secondary-{{ ai_gen_id }}"
        >
          {{ block.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>

    {% if block.settings.guarantee_text != blank %}
      <div class="ai-final-cta-guarantee-{{ ai_gen_id }}">
        <svg class="ai-final-cta-guarantee-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          <path d="M9 12l2 2 4-4"></path>
        </svg>
        {{ block.settings.guarantee_text }}
      </div>
    {% endif %}
  </div>
</div>

