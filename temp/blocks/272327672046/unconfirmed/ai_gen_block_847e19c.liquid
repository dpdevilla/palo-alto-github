{% doc %}
  @prompt
    1.	Hero Section (Image or Video, above the fold)
    o	Strong headline
    o	Clear CTA button
    2.	Influencer Endorsement
    o	Short personal story or testimonial from Iza
    o	Optional: short video clip
    3.	Product Spotlight
    o	Combination of lifestyle + product images
    o	Benefit bullet points (not just features)
    o	Show price + any limited-time promo
    4.	Result: Before & After Section
    5.	Social Proof
    o	Customer reviews with star ratings
    o	User-generated content (UGC) or influencer-tagged posts
    6.	Key Ingredients & Benefits
    7.	How to Use
    o	Step-by-step directions
    o	Add icons or images for clarity
    8.	Limited-Time Offer / Urgency
    o	Example: “Get 15% off today – while stocks last.”
    o	Option to add countdown timer
    9.	FAQ Section (Optional)
    10.	Final Call-to-Action
    •	Hero-style banner (Iza + featured product)
    •	Strong button: Buy Now / Add to Cart
    
    Note: Since the landing page is quite long, we’ll add a sticky “Add to Cart” button so it’s always visible as the customer scrolls down.
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-influencer-endorsement-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-influencer-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 40px;
  }

  .ai-influencer-media-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.media_width }}%;
    position: relative;
  }

  .ai-influencer-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    object-fit: cover;
  }

  .ai-influencer-video-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-influencer-content-{{ ai_gen_id }} {
    flex: 1;
    color: {{ block.settings.text_color }};
  }

  .ai-influencer-quote-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_size }}px;
    line-height: 1.5;
    font-style: italic;
    margin: 0 0 20px;
    color: {{ block.settings.text_color }};
    position: relative;
  }

  .ai-influencer-quote-{{ ai_gen_id }}::before {
    content: '"';
    font-size: {{ block.settings.quote_size | times: 1.5 }}px;
    color: {{ block.settings.accent_color }};
    position: absolute;
    left: -20px;
    top: -10px;
    font-family: serif;
  }

  .ai-influencer-quote-{{ ai_gen_id }}::after {
    content: '"';
    font-size: {{ block.settings.quote_size | times: 1.5 }}px;
    color: {{ block.settings.accent_color }};
    font-family: serif;
  }

  .ai-influencer-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    font-weight: 600;
    margin: 0 0 5px;
    color: {{ block.settings.text_color }};
  }

  .ai-influencer-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.accent_color }};
    margin: 0 0 20px;
  }

  .ai-influencer-story-{{ ai_gen_id }} {
    font-size: {{ block.settings.story_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    opacity: 0.9;
  }

  .ai-influencer-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
    position: relative;
  }

  .ai-influencer-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-influencer-container-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 30px;
      text-align: center;
    }

    .ai-influencer-media-{{ ai_gen_id }} {
      flex: none;
      width: 100%;
      max-width: 300px;
    }

    .ai-influencer-quote-{{ ai_gen_id }} {
      font-size: {{ block.settings.quote_size | times: 0.9 }}px;
    }

    .ai-influencer-quote-{{ ai_gen_id }}::before {
      left: -15px;
      top: -8px;
    }
  }

  {% if block.settings.layout == 'reverse' %}
    .ai-influencer-container-{{ ai_gen_id }} {
      flex-direction: row-reverse;
    }

    @media screen and (max-width: 768px) {
      .ai-influencer-container-{{ ai_gen_id }} {
        flex-direction: column;
      }
    }
  {% endif %}
{% endstyle %}

<div class="ai-influencer-endorsement-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-influencer-container-{{ ai_gen_id }}">
    <div class="ai-influencer-media-{{ ai_gen_id }}">
      {% if block.settings.media_type == 'image' and block.settings.influencer_image %}
        <img
          src="{{ block.settings.influencer_image | image_url: width: 600 }}"
          alt="{{ block.settings.influencer_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.influencer_image.width }}"
          height="{{ block.settings.influencer_image.height }}"
          class="ai-influencer-image-{{ ai_gen_id }}"
        >
      {% elsif block.settings.media_type == 'video' and block.settings.influencer_video %}
        <video
          class="ai-influencer-video-{{ ai_gen_id }}"
          controls
          {% if block.settings.video_poster %}poster="{{ block.settings.video_poster | image_url: width: 600 }}"{% endif %}
        >
          <source src="{{ block.settings.influencer_video }}" type="video/mp4">
        </video>
      {% else %}
        <div class="ai-influencer-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-influencer-empty-state-{{ ai_gen_id }}">
            Add influencer photo or video
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-influencer-content-{{ ai_gen_id }}">
      {% if block.settings.testimonial_quote != blank %}
        <blockquote class="ai-influencer-quote-{{ ai_gen_id }}">
          {{ block.settings.testimonial_quote }}
        </blockquote>
      {% endif %}

      {% if block.settings.influencer_name != blank %}
        <div class="ai-influencer-name-{{ ai_gen_id }}">{{ block.settings.influencer_name }}</div>
      {% endif %}

      {% if block.settings.influencer_title != blank %}
        <div class="ai-influencer-title-{{ ai_gen_id }}">{{ block.settings.influencer_title }}</div>
      {% endif %}

      {% if block.settings.personal_story != blank %}
        <div class="ai-influencer-story-{{ ai_gen_id }}">{{ block.settings.personal_story }}</div>
      {% endif %}
    </div>
  </div>
</div>

