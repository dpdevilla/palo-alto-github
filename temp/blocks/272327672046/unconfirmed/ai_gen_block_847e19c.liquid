{% doc %}
  @prompt
    1.	Hero Section (Image or Video, above the fold)
    o	Strong headline
    o	Clear CTA button
    2.	Influencer Endorsement
    o	Short personal story or testimonial from Iza
    o	Optional: short video clip
    3.	Product Spotlight
    o	Combination of lifestyle + product images
    o	Benefit bullet points (not just features)
    o	Show price + any limited-time promo
    4.	Result: Before & After Section
    5.	Social Proof
    o	Customer reviews with star ratings
    o	User-generated content (UGC) or influencer-tagged posts
    6.	Key Ingredients & Benefits
    7.	How to Use
    o	Step-by-step directions
    o	Add icons or images for clarity
    8.	Limited-Time Offer / Urgency
    o	Example: “Get 15% off today – while stocks last.”
    o	Option to add countdown timer
    9.	FAQ Section (Optional)
    10.	Final Call-to-Action
    •	Hero-style banner (Iza + featured product)
    •	Strong button: Buy Now / Add to Cart
    
    Note: Since the landing page is quite long, we’ll add a sticky “Add to Cart” button so it’s always visible as the customer scrolls down.
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-social-proof-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-social-proof-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    text-align: center;
  }

  .ai-social-proof-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 15px;
    color: {{ block.settings.text_color }};
  }

  .ai-social-proof-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.5;
    margin: 0 0 50px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-social-proof-reviews-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-bottom: 50px;
  }

  .ai-social-proof-review-{{ ai_gen_id }} {
    background-color: {{ block.settings.review_bg_color }};
    padding: 30px;
    border-radius: {{ block.settings.review_border_radius }}px;
    text-align: left;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease;
  }

  .ai-social-proof-review-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .ai-social-proof-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
    margin-bottom: 15px;
  }

  .ai-social-proof-star-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    color: {{ block.settings.star_color }};
  }

  .ai-social-proof-review-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.review_text_size }}px;
    line-height: 1.6;
    margin: 0 0 20px;
    color: {{ block.settings.text_color }};
    font-style: italic;
  }

  .ai-social-proof-reviewer-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .ai-social-proof-reviewer-avatar-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: {{ block.settings.accent_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 16px;
  }

  .ai-social-proof-reviewer-info-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-social-proof-reviewer-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.reviewer_name_size }}px;
    font-weight: 600;
    margin: 0 0 2px;
    color: {{ block.settings.text_color }};
  }

  .ai-social-proof-reviewer-location-{{ ai_gen_id }} {
    font-size: {{ block.settings.reviewer_location_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-social-proof-ugc-{{ ai_gen_id }} {
    margin-top: 40px;
  }

  .ai-social-proof-ugc-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.ugc_heading_size }}px;
    font-weight: 600;
    margin: 0 0 30px;
    color: {{ block.settings.text_color }};
  }

  .ai-social-proof-ugc-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 15px;
  }

  .ai-social-proof-ugc-item-{{ ai_gen_id }} {
    position: relative;
    aspect-ratio: 1;
    border-radius: {{ block.settings.ugc_border_radius }}px;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-social-proof-ugc-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-social-proof-ugc-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(0,0,0,0.3), transparent);
    display: flex;
    align-items: flex-end;
    padding: 15px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-social-proof-ugc-item-{{ ai_gen_id }}:hover .ai-social-proof-ugc-overlay-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-social-proof-ugc-username-{{ ai_gen_id }} {
    color: white;
    font-size: 12px;
    font-weight: 600;
  }

  .ai-social-proof-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.ugc_border_radius }}px;
  }

  @media screen and (max-width: 768px) {
    .ai-social-proof-reviews-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-social-proof-ugc-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
    }

    .ai-social-proof-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-social-proof-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-social-proof-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-social-proof-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-social-proof-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    <div class="ai-social-proof-reviews-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign review_text_key = 'review_' | append: i | append: '_text'
          assign reviewer_name_key = 'review_' | append: i | append: '_name'
          assign reviewer_location_key = 'review_' | append: i | append: '_location'
          assign review_rating_key = 'review_' | append: i | append: '_rating'

          assign review_text = block.settings[review_text_key]
          assign reviewer_name = block.settings[reviewer_name_key]
          assign reviewer_location = block.settings[reviewer_location_key]
          assign review_rating = block.settings[review_rating_key]
        %}

        {% if review_text != blank %}
          <div class="ai-social-proof-review-{{ ai_gen_id }}">
            <div class="ai-social-proof-stars-{{ ai_gen_id }}">
              {% for star in (1..5) %}
                <svg class="ai-social-proof-star-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="{% if star <= review_rating %}currentColor{% else %}none{% endif %}" stroke="currentColor" stroke-width="2">
                  <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                </svg>
              {% endfor %}
            </div>

            <div class="ai-social-proof-review-text-{{ ai_gen_id }}">{{ review_text }}</div>

            <div class="ai-social-proof-reviewer-{{ ai_gen_id }}">
              <div class="ai-social-proof-reviewer-avatar-{{ ai_gen_id }}">
                {{ reviewer_name | slice: 0 }}
              </div>
              <div class="ai-social-proof-reviewer-info-{{ ai_gen_id }}">
                <div class="ai-social-proof-reviewer-name-{{ ai_gen_id }}">{{ reviewer_name }}</div>
                {% if reviewer_location != blank %}
                  <div class="ai-social-proof-reviewer-location-{{ ai_gen_id }}">{{ reviewer_location }}</div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_ugc %}
      <div class="ai-social-proof-ugc-{{ ai_gen_id }}">
        {% if block.settings.ugc_heading != blank %}
          <h3 class="ai-social-proof-ugc-heading-{{ ai_gen_id }}">{{ block.settings.ugc_heading }}</h3>
        {% endif %}

        <div class="ai-social-proof-ugc-grid-{{ ai_gen_id }}">
          {% for i in (1..6) %}
            {% liquid
              assign ugc_image_key = 'ugc_image_' | append: i
              assign ugc_username_key = 'ugc_username_' | append: i

              assign ugc_image = block.settings[ugc_image_key]
              assign ugc_username = block.settings[ugc_username_key]
            %}

            <div class="ai-social-proof-ugc-item-{{ ai_gen_id }}">
              {% if ugc_image %}
                <img
                  src="{{ ugc_image | image_url: width: 300 }}"
                  alt="User generated content"
                  loading="lazy"
                  class="ai-social-proof-ugc-image-{{ ai_gen_id }}"
                >
                {% if ugc_username != blank %}
                  <div class="ai-social-proof-ugc-overlay-{{ ai_gen_id }}">
                    <div class="ai-social-proof-ugc-username-{{ ai_gen_id }}">@{{ ugc_username }}</div>
                  </div>
                {% endif %}
              {% else %}
                <div class="ai-social-proof-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

