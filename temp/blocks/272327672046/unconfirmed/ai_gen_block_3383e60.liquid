{% doc %}
  @prompt
    1.	Hero Section (Image or Video, above the fold)
    o	Strong headline
    o	Clear CTA button
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.section_height }}px;
    display: flex;
    align-items: {{ block.settings.content_alignment }};
    justify-content: center;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-hero-media-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-media-{{ ai_gen_id }} img,
  .ai-hero-media-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .ai-hero-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    z-index: 2;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    max-width: {{ block.settings.content_width }}px;
    padding: 40px 20px;
    width: 100%;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    font-weight: {{ settings.type_heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    color: {{ block.settings.text_color }};
    {% if settings.heading_caps %}text-transform: uppercase;{% endif %}
    letter-spacing: {{ settings.heading_letter_spacing }}%;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    font-family: {{ settings.type_base_font.family }}, {{ settings.type_base_font.fallback_families }};
    font-weight: {{ settings.type_base_font.weight }};
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.4;
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.9;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-family: {{ settings.type_base_font.family }}, {{ settings.type_base_font.fallback_families }};
    font-weight: {{ settings.type_base_font.weight }};
    font-size: {{ block.settings.button_text_size }}px;
    border: 2px solid {{ block.settings.button_border_color }};
    {% if settings.button_style == 'rounded' %}
      border-radius: 8px;
    {% elsif settings.button_style == 'pill' %}
      border-radius: 50px;
    {% else %}
      border-radius: 0;
    {% endif %}
    transition: all 0.3s ease;
    cursor: pointer;
    {% if settings.button_caps %}text-transform: uppercase;{% endif %}
    letter-spacing: {{ settings.button_letter_spacing }}%;
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 4;
  }

  @media screen and (max-width: 768px) {
    .ai-hero-section-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_section_height }}px;
    }

    .ai-hero-content-{{ ai_gen_id }} {
      padding: 20px 15px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_subheading_size }}px;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_button_text_size }}px;
      padding: {{ block.settings.mobile_button_padding_vertical }}px {{ block.settings.mobile_button_padding_horizontal }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.media_type == 'image' and block.settings.background_image %}
    <div class="ai-hero-media-{{ ai_gen_id }}">
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    </div>
  {% elsif block.settings.media_type == 'video' and block.settings.background_video %}
    <div class="ai-hero-media-{{ ai_gen_id }}">
      <video
        autoplay
        muted
        loop
        playsinline
        {% if block.settings.video_poster %}poster="{{ block.settings.video_poster | image_url: width: 2000 }}"{% endif %}
      >
        <source src="{{ block.settings.background_video }}" type="video/mp4">
      </video>
    </div>
  {% else %}
    <div class="ai-hero-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
    </div>
    {% if block.settings.media_type == 'image' %}
      <div class="ai-hero-empty-state-{{ ai_gen_id }}">
        Next, add a background image
      </div>
    {% else %}
      <div class="ai-hero-empty-state-{{ ai_gen_id }}">
        Next, add a background video
      </div>
    {% endif %}
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <a
        href="{{ block.settings.button_link | default: '#' }}"
        class="ai-hero-button-{{ ai_gen_id }}"
        {% if block.settings.button_link == blank %}aria-disabled="true"{% endif %}
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

