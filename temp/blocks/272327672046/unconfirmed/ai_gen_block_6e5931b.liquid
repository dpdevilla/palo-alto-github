{% doc %}
  @prompt
    7.	How to Use
    o	Step-by-step directions
    o	Add icons or images for clarity
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-how-to-use-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-how-to-use__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-how-to-use__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-how-to-use__title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    font-weight: 700;
  }

  .ai-how-to-use__subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0;
    opacity: 0.8;
  }

  .ai-how-to-use__steps-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: {{ block.settings.step_spacing }}px;
    margin-top: 40px;
  }

  .ai-how-to-use__step-{{ ai_gen_id }} {
    background-color: {{ block.settings.step_background_color }};
    border-radius: {{ block.settings.step_border_radius }}px;
    padding: 30px 24px;
    text-align: {{ block.settings.step_text_alignment }};
    border: {{ block.settings.step_border_width }}px solid {{ block.settings.step_border_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
  }

  .ai-how-to-use__step-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-how-to-use__step-number-{{ ai_gen_id }} {
    position: absolute;
    top: -12px;
    left: 24px;
    background-color: {{ block.settings.step_number_bg_color }};
    color: {{ block.settings.step_number_text_color }};
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: 700;
    border: 2px solid {{ block.settings.background_color }};
  }

  .ai-how-to-use__step-icon-{{ ai_gen_id }} {
    margin-bottom: 20px;
    display: flex;
    {% if block.settings.step_text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.step_text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
  }

  .ai-how-to-use__step-icon-{{ ai_gen_id }} img {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    object-fit: contain;
  }

  .ai-how-to-use__step-icon-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_placeholder_color }};
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-how-to-use__step-icon-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    color: {{ block.settings.text_color }};
    opacity: 0.5;
  }

  .ai-how-to-use__step-title-{{ ai_gen_id }} {
    color: {{ block.settings.step_title_color }};
    font-size: {{ block.settings.step_title_size }}px;
    font-weight: 600;
    margin: 0 0 12px;
  }

  .ai-how-to-use__step-description-{{ ai_gen_id }} {
    color: {{ block.settings.step_text_color }};
    font-size: {{ block.settings.step_text_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-how-to-use__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-how-to-use__empty-state-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    margin-bottom: 16px;
    opacity: 0.4;
  }

  @media screen and (max-width: 768px) {
    .ai-how-to-use-{{ ai_gen_id }} {
      padding: 30px 16px;
    }

    .ai-how-to-use__steps-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .ai-how-to-use__step-{{ ai_gen_id }} {
      padding: 24px 20px;
    }

    .ai-how-to-use__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-how-to-use__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-how-to-use-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-how-to-use__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-how-to-use__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-how-to-use__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-how-to-use__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% assign has_steps = false %}
    {% for i in (1..6) %}
      {% liquid
        assign step_title_key = 'step_' | append: i | append: '_title'
        assign step_title = block.settings[step_title_key]
        if step_title != blank
          assign has_steps = true
          break
        endif
      %}
    {% endfor %}

    {% if has_steps %}
      <div class="ai-how-to-use__steps-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign step_title_key = 'step_' | append: i | append: '_title'
            assign step_description_key = 'step_' | append: i | append: '_description'
            assign step_icon_key = 'step_' | append: i | append: '_icon'
            
            assign step_title = block.settings[step_title_key]
            assign step_description = block.settings[step_description_key]
            assign step_icon = block.settings[step_icon_key]
          %}

          {% if step_title != blank %}
            <div class="ai-how-to-use__step-{{ ai_gen_id }}">
              {% if block.settings.show_step_numbers %}
                <div class="ai-how-to-use__step-number-{{ ai_gen_id }}">{{ i }}</div>
              {% endif %}

              {% if step_icon != blank or block.settings.show_placeholder_icons %}
                <div class="ai-how-to-use__step-icon-{{ ai_gen_id }}">
                  {% if step_icon != blank %}
                    <img
                      src="{{ step_icon | image_url: width: 200 }}"
                      alt="{{ step_title | escape }}"
                      width="{{ block.settings.icon_size }}"
                      height="{{ block.settings.icon_size }}"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="ai-how-to-use__step-icon-placeholder-{{ ai_gen_id }}">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                        <path d="M2 17l10 5 10-5"/>
                        <path d="M2 12l10 5 10-5"/>
                      </svg>
                    </div>
                  {% endif %}
                </div>
              {% endif %}

              <h3 class="ai-how-to-use__step-title-{{ ai_gen_id }}">{{ step_title }}</h3>
              
              {% if step_description != blank %}
                <div class="ai-how-to-use__step-description-{{ ai_gen_id }}">{{ step_description }}</div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-how-to-use__empty-state-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 11H5a2 2 0 0 0-2 2v7a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7a2 2 0 0 0-2-2h-4"/>
          <polyline points="9,11 12,14 15,11"/>
          <line x1="12" y1="14" x2="12" y2="3"/>
        </svg>
        <p>Add your step-by-step instructions to get started</p>
      </div>
    {% endif %}
  </div>
</div>

