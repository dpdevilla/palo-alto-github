{% doc %}
  @prompt
    Key Ingredients with alternate layout
    circle image (left), sample text ingredients on the (right side)
    then setting options to choose right or left position
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-key-ingredients-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.content_gap }}px;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-key-ingredients-{{ ai_gen_id }}--reverse {
    flex-direction: row-reverse;
  }

  .ai-key-ingredients-image-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
    border-radius: 50%;
    overflow: hidden;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-key-ingredients-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-key-ingredients-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-key-ingredients-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-key-ingredients-content-{{ ai_gen_id }} {
    flex-grow: 1;
    min-width: 0;
  }

  .ai-key-ingredients-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_margin }}px 0;
    line-height: 1.2;
  }

  .ai-key-ingredients-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
    margin: 0;
  }

  .ai-key-ingredients-description-{{ ai_gen_id }} p {
    margin: 0 0 8px 0;
  }

  .ai-key-ingredients-description-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-key-ingredients-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #999;
    text-align: center;
    pointer-events: none;
    white-space: nowrap;
  }

  @media screen and (max-width: 749px) {
    .ai-key-ingredients-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
      gap: {{ block.settings.content_gap | times: 0.75 }}px;
      padding: {{ block.settings.section_padding | times: 0.75 }}px;
    }

    .ai-key-ingredients-{{ ai_gen_id }}--reverse {
      flex-direction: column;
    }

    .ai-key-ingredients-image-{{ ai_gen_id }} {
      width: {{ block.settings.image_size | times: 0.8 }}px;
      height: {{ block.settings.image_size | times: 0.8 }}px;
    }

    .ai-key-ingredients-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-key-ingredients-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-key-ingredients-{{ ai_gen_id }} {% if block.settings.layout_position == 'right' %}ai-key-ingredients-{{ ai_gen_id }}--reverse{% endif %}"
  {{ block.shopify_attributes }}
>
  <div class="ai-key-ingredients-image-{{ ai_gen_id }}">
    {% if block.settings.ingredient_image %}
      <img
        src="{{ block.settings.ingredient_image | image_url: width: 400 }}"
        alt="{{ block.settings.ingredient_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image_size }}"
        height="{{ block.settings.image_size }}"
      >
    {% else %}
      <div class="ai-key-ingredients-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-key-ingredients-empty-state-{{ ai_gen_id }}">
          Add ingredient image
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-key-ingredients-content-{{ ai_gen_id }}">
    {% if block.settings.ingredient_title != blank %}
      <h3 class="ai-key-ingredients-title-{{ ai_gen_id }}">{{ block.settings.ingredient_title }}</h3>
    {% endif %}

    {% if block.settings.ingredient_description != blank %}
      <div class="ai-key-ingredients-description-{{ ai_gen_id }}">
        {{ block.settings.ingredient_description }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Key ingredients",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "image_picker",
      "id": "ingredient_image",
      "label": "Ingredient image"
    },
    {
      "type": "text",
      "id": "ingredient_title",
      "label": "Ingredient title",
      "default": "Natural Extract"
    },
    {
      "type": "richtext",
      "id": "ingredient_description",
      "label": "Ingredient description",
      "default": "<p>Rich in antioxidants and vitamins, this natural extract helps nourish and protect your skin while providing long-lasting hydration.</p>"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout_position",
      "label": "Image position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "image_size",
      "label": "Image size",
      "min": 80,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 120
    },
    {
      "type": "range",
      "id": "content_gap",
      "label": "Content gap",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "default": 30
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Section padding",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "default": 30
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 30,
      "step": 2,
      "unit": "px",
      "default": 12
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#fff7f2"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#0b0b0b"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description color",
      "default": "#0b0b0b"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Title size",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "select",
      "id": "title_weight",
      "label": "Title weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "range",
      "id": "title_margin",
      "label": "Title bottom margin",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "default": 8
    },
    {
      "type": "range",
      "id": "description_size",
      "label": "Description size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 14
    }
  ],
  "presets": [
    {
      "name": "Key ingredients"
    }
  ]
}
{% endschema %}