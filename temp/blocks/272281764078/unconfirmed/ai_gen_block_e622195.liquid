{% style %}
  .ai-product-slider-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px;
  }

  .ai-product-slider-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 30px;
  }

  .ai-product-slider-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 10px;
    font-weight: 600;
  }

  .ai-product-slider-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-product-slider-container-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.container_border_radius }}px;
  }

  .ai-product-slider-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease;
    gap: {{ block.settings.card_gap }}px;
  }

  .ai-product-slider-card-{{ ai_gen_id }} {
    flex: 0 0 calc(33.333% - {{ block.settings.card_gap | divided_by: 3.0 | times: 2 }}px);
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: {{ block.settings.card_shadow_intensity }}px {{ block.settings.card_shadow_intensity }}px {{ block.settings.card_shadow_intensity | times: 2 }}px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-product-slider-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: {{ block.settings.card_shadow_intensity | times: 2 }}px {{ block.settings.card_shadow_intensity | times: 2 }}px {{ block.settings.card_shadow_intensity | times: 4 }}px rgba(0, 0, 0, 0.15);
  }

  .ai-product-slider-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
    margin-bottom: 15px;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-product-slider-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-product-slider-card-{{ ai_gen_id }}:hover .ai-product-slider-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-product-slider-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-product-slider-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-product-slider-card-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-product-slider-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.product_title_color }};
    margin: 0;
    line-height: 1.3;
  }

  .ai-product-slider-card-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    font-weight: 500;
    color: {{ block.settings.product_price_color }};
    margin: 0;
  }

  .ai-product-slider-compare-price-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.7;
    margin-right: 8px;
  }

  .ai-product-slider-card-button-{{ ai_gen_id }} {
    background: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    padding: 10px 16px;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    margin-top: 10px;
  }

  .ai-product-slider-card-button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.button_hover_background }};
    transform: translateY(-1px);
  }

  .ai-product-slider-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: {{ block.settings.nav_button_background }};
    color: {{ block.settings.nav_button_color }};
    border: none;
    width: {{ block.settings.nav_button_size }}px;
    height: {{ block.settings.nav_button_size }}px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    z-index: 2;
  }

  .ai-product-slider-nav-{{ ai_gen_id }}:hover {
    background: {{ block.settings.nav_button_hover_background }};
    transform: translateY(-50%) scale(1.1);
  }

  .ai-product-slider-nav-prev-{{ ai_gen_id }} {
    left: -{{ block.settings.nav_button_size | divided_by: 2 }}px;
  }

  .ai-product-slider-nav-next-{{ ai_gen_id }} {
    right: -{{ block.settings.nav_button_size | divided_by: 2 }}px;
  }

  .ai-product-slider-nav-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-product-slider-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 20px;
  }

  .ai-product-slider-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: {{ block.settings.dot_inactive_color }};
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-product-slider-dot-{{ ai_gen_id }}.active {
    background: {{ block.settings.dot_active_color }};
    transform: scale(1.2);
  }

  .ai-product-slider-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-style: italic;
  }

  @media screen and (max-width: 768px) {
