{% doc %}
  @prompt
    please create Influencer landing page 
    
    Hero Banner or Video (Top Section)
    Influencer photo/video endorsing the product.
    Headline: “Glow Like [Influencer Name] with [Product Name]”
    Clear CTA (e.g., Shop Now button).
    
    Influencer Testimonial / Quote Section
    
    Add the influencer’s personal review or story.
    
    Optional: video testimonial.
    
    Product Highlight Section
    
    Product images (lifestyle + clean product shot).
    
    Short benefit-driven bullets (not just features).
    
    Pricing and limited-time offer (if any).
    
    Before & After / Results Section
    
    High-impact visuals (transformation photos).
    
    Real stats or claims (“92% saw clearer skin in 2 weeks”).
    
    
    Key Ingredients & Benefits Section
    
    Highlight natural/active ingredients.
    
    Simple explanation of what makes it effective.
    
    How to Use Section
    
    Step-by-step usage guide (with icons or visuals).
    
    Encourages customers to feel confident using it.
    
    Urgency/Offer Section
    
    Example: “Limited Stock — Get 15% off today.”
    
    Countdown timer for promos.
    
    
    Final CTA (Bottom Section)
    
    Strong button: Buy Now / Add to Cart.
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-influencer-landing-{{ ai_gen_id }} {
    width: 100%;
  }

  .ai-influencer-hero-{{ ai_gen_id }} {
    position: relative;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ block.settings.hero_bg_color }};
    color: {{ block.settings.hero_text_color }};
    text-align: center;
    padding: 60px 20px;
    overflow: hidden;
  }

  .ai-influencer-hero-bg-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-influencer-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ block.settings.hero_overlay_color }};
    z-index: 2;
  }

  .ai-influencer-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    max-width: 600px;
    margin: 0 auto;
  }

  .ai-influencer-hero-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_headline_size }}px;
    font-weight: bold;
    margin: 0 0 20px;
    line-height: 1.2;
  }

  .ai-influencer-hero-subtext-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_subtext_size }}px;
    margin: 0 0 30px;
    opacity: 0.9;
  }

  .ai-influencer-cta-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 15px 40px;
    background: {{ block.settings.cta_bg_color }};
    color: {{ block.settings.cta_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.cta_border_radius }}px;
    font-weight: bold;
    font-size: {{ block.settings.cta_font_size }}px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-influencer-cta-button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.cta_hover_bg_color }};
    transform: translateY(-2px);
  }

  .ai-influencer-section-{{ ai_gen_id }} {
    padding: 60px 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-influencer-testimonial-{{ ai_gen_id }} {
    background: {{ block.settings.testimonial_bg_color }};
    color: {{ block.settings.testimonial_text_color }};
    text-align: center;
  }

  .ai-influencer-testimonial-content-{{ ai_gen_id }} {
    max-width: 800px;
    margin: 0 auto;
  }

  .ai-influencer-testimonial-quote-{{ ai_gen_id }} {
    font-size: {{ block.settings.testimonial_quote_size }}px;
    font-style: italic;
    margin: 0 0 30px;
    line-height: 1.6;
  }

  .ai-influencer-testimonial-author-{{ ai_gen_id }} {
    font-size: {{ block.settings.testimonial_author_size }}px;
    font-weight: bold;
    margin: 0;
  }

  .ai-influencer-product-highlight-{{ ai_gen_id }} {
    background: {{ block.settings.product_bg_color }};
    color: {{ block.settings.product_text_color }};
  }

  .ai-influencer-product-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
  }

  .ai-influencer-product-images-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .ai-influencer-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: {{ block.settings.product_image_radius }}px;
  }

  .ai-influencer-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 250px;
    background: #f4f4f4;
    border-radius: {{ block.settings.product_image_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-influencer-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.5;
  }

  .ai-influencer-product-info-{{ ai_gen_id }} h3 {
    font-size: {{ block.settings.product_title_size }}px;
    margin: 0 0 20px;
    font-weight: bold;
  }

  .ai-influencer-product-benefits-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0 0 20px;
  }

  .ai-influencer-product-benefits-{{ ai_gen_id }} li {
    padding: 8px 0;
    font-size: {{ block.settings.product_benefit_size }}px;
    position: relative;
    padding-left: 25px;
  }

  .ai-influencer-product-benefits-{{ ai_gen_id }} li:before {
    content: "✓";
    position: absolute;
    left: 0;
    color: {{ block.settings.product_check_color }};
    font-weight: bold;
  }

  .ai-influencer-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    font-weight: bold;
    margin: 0 0 10px;
    color: {{ block.settings.product_price_color }};
  }

  .ai-influencer-product-offer-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_offer_size }}px;
    color: {{ block.settings.product_offer_color }};
    margin: 0 0 20px;
    font-weight: bold;
  }

  .ai-influencer-results-{{ ai_gen_id }} {
    background: {{ block.settings.results_bg_color }};
    color: {{ block.settings.results_text_color }};
    text-align: center;
  }

  .ai-influencer-results-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
    margin-top: 40px;
  }

  .ai-influencer-results-item-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-influencer-results-image-{{ ai_gen_id }} {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: {{ block.settings.results_image_radius }}px;
    margin-bottom: 20px;
  }

  .ai-influencer-results-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 300px;
    background: #f4f4f4;
    border-radius: {{ block.settings.results_image_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
  }

  .ai-influencer-results-image-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.5;
  }

  .ai-influencer-results-stat-{{ ai_gen_id }} {
    font-size: {{ block.settings.results_stat_size }}px;
    font-weight: bold;
    color: {{ block.settings.results_stat_color }};
    margin: 0 0 10px;
  }

  .ai-influencer-ingredients-{{ ai_gen_id }} {
    background: {{ block.settings.ingredients_bg_color }};
    color: {{ block.settings.ingredients_text_color }};
  }

  .ai-influencer-ingredients-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    margin-top: 40px;
  }

  .ai-influencer-ingredient-item-{{ ai_gen_id }} {
    text-align: center;
    padding: 30px 20px;
    background: {{ block.settings.ingredient_card_bg }};
    border-radius: {{ block.settings.ingredient_card_radius }}px;
  }

  .ai-influencer-ingredient-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.ingredient_name_size }}px;
    font-weight: bold;
    margin: 0 0 15px;
    color: {{ block.settings.ingredient_name_color }};
  }

  .ai-influencer-ingredient-benefit-{{ ai_gen_id }} {
    font-size: {{ block.settings.ingredient_benefit_size }}px;
    line-height: 1.5;
  }

  .ai-influencer-usage-{{ ai_gen_id }} {
    background: {{ block.settings.usage_bg_color }};
    color: {{ block.settings.usage_text_color }};
  }

  .ai-influencer-usage-steps-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
    margin-top: 40px;
  }

  .ai-influencer-usage-step-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-influencer-usage-step-number-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: {{ block.settings.usage_step_bg }};
    color: {{ block.settings.usage_step_text }};
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: bold;
    margin: 0 auto 20px;
  }

  .ai-influencer-usage-step-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.usage_step_size }}px;
    line-height: 1.5;
  }

  .ai-influencer-urgency-{{ ai_gen_id }} {
    background: {{ block.settings.urgency_bg_color }};
    color: {{ block.settings.urgency_text_color }};
    text-align: center;
  }

  .ai-influencer-urgency-offer-{{ ai_gen_id }} {
    font-size: {{ block.settings.urgency_offer_size }}px;
    font-weight: bold;
    margin: 0 0 20px;
    color: {{ block.settings.urgency_offer_color }};
  }

  .ai-influencer-countdown-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin: 30px 0;
  }

  .ai-influencer-countdown-item-{{ ai_gen_id }} {
    text-align: center;
    padding: 15px;
    background: {{ block.settings.countdown_bg }};
    border-radius: 8px;
    min-width: 80px;
  }

  .ai-influencer-countdown-number-{{ ai_gen_id }} {
    font-size: 24px;
    font-weight: bold;
    color: {{ block.settings.countdown_number_color }};
    display: block;
  }

  .ai-influencer-countdown-label-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.countdown_label_color }};
    text-transform: uppercase;
  }

  .ai-influencer-final-cta-{{ ai_gen_id }} {
    background: {{ block.settings.final_cta_bg_color }};
    color: {{ block.settings.final_cta_text_color }};
    text-align: center;
  }

  .ai-influencer-section-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    font-weight: bold;
    margin: 0 0 20px;
    text-align: center;
  }

  @media screen and (max-width: 768px) {
    .ai-influencer-hero-{{ ai_gen_id }} {
      min-height: 400px;
      padding: 40px 20px;
    }

    .ai-influencer-hero-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.hero_headline_size | times: 0.8 }}px;
    }

    .ai-influencer-product-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-influencer-product-images-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-influencer-results-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-influencer-ingredients-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-influencer-usage-steps-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-influencer-countdown-{{ ai_gen_id }} {
      flex-wrap: wrap;
      gap: 15px;
    }

    .ai-influencer-section-{{ ai_gen_id }} {
      padding: 40px 20px;
    }
  }
{% endstyle %}

<influencer-landing-{{ ai_gen_id }} class="ai-influencer-landing-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <!-- Hero Section -->
  <section class="ai-influencer-hero-{{ ai_gen_id }}">
    {% if block.settings.hero_image %}
      <img 
        src="{{ block.settings.hero_image | image_url: width: 1920 }}" 
        alt="{{ block.settings.hero_image.alt | escape }}"
        class="ai-influencer-hero-bg-{{ ai_gen_id }}"
        loading="lazy"
      >
    {% endif %}
    <div class="ai-influencer-hero-overlay-{{ ai_gen_id }}"></div>
    <div class="ai-influencer-hero-content-{{ ai_gen_id }}">
      {% if block.settings.hero_headline != blank %}
        <h1 class="ai-influencer-hero-headline-{{ ai_gen_id }}">{{ block.settings.hero_headline }}</h1>
      {% endif %}
      {% if block.settings.hero_subtext != blank %}
        <p class="ai-influencer-hero-subtext-{{ ai_gen_id }}">{{ block.settings.hero_subtext }}</p>
      {% endif %}
      {% if block.settings.hero_cta_text != blank %}
        <a href="{{ block.settings.hero_cta_link }}" class="ai-influencer-cta-button-{{ ai_gen_id }}">
          {{ block.settings.hero_cta_text }}
        </a>
      {% endif %}
    </div>
  </section>

  <!-- Testimonial Section -->
  {% if block.settings.show_testimonial %}
    <section class="ai-influencer-section-{{ ai_gen_id }} ai-influencer-testimonial-{{ ai_gen_id }}">
      <div class="ai-influencer-testimonial-content-{{ ai_gen_id }}">
        {% if block.settings.testimonial_title != blank %}
          <h2 class="ai-influencer-section-title-{{ ai_gen_id }}">{{ block.settings.testimonial_title }}</h2>
        {% endif %}
        {% if block.settings.testimonial_quote != blank %}
          <blockquote class="ai-influencer-testimonial-quote-{{ ai_gen_id }}">
            "{{ block.settings.testimonial_quote }}"
          </blockquote>
        {% endif %}
        {% if block.settings.testimonial_author != blank %}
          <p class="ai-influencer-testimonial-author-{{ ai_gen_id }}">— {{ block.settings.testimonial_author }}</p>
        {% endif %}
      </div>
    </section>
  {% endif %}

  <!-- Product Highlight Section -->
  {% if block.settings.show_product_highlight %}
    <section class="ai-influencer-section-{{ ai_gen_id }} ai-influencer-product-highlight-{{ ai_gen_id }}">
      {% if block.settings.product_title != blank %}
        <h2 class="ai-influencer-section-title-{{ ai_gen_id }}">{{ block.settings.product_title }}</h2>
      {% endif %}
      <div class="ai-influencer-product-grid-{{ ai_gen_id }}">
        <div class="ai-influencer-product-images-{{ ai_gen_id }}">
          {% if block.settings.product_image_1 %}
            <img 
              src="{{ block.settings.product_image_1 | image_url: width: 400 }}" 
              alt="{{ block.settings.product_image_1.alt | escape }}"
              class="ai-influencer-product-image-{{ ai_gen_id }}"
              loading="lazy"
            >
          {% else %}
            <div class="ai-influencer-product-image-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
          {% if block.settings.product_image_2 %}
            <img 
              src="{{ block.settings.product_image_2 | image_url: width: 400 }}" 
              alt="{{ block.settings.product_image_2.alt | escape }}"
              class="ai-influencer-product-image-{{ ai_gen_id }}"
              loading="lazy"
            >
          {% else %}
            <div class="ai-influencer-product-image-placeholder-{{ ai_gen_id }}">
              {{ 'product-2' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        <div class="ai-influencer-product-info-{{ ai_gen_id }}">
          {% if block.settings.product_name != blank %}
            <h3>{{ block.settings.product_name }}</h3>
          {% endif %}
          {% if block.settings.product_benefits != blank %}
            <ul class="ai-influencer-product-benefits-{{ ai_gen_id }}">
              {% assign benefits = block.settings.product_benefits | split: '|' %}
              {% for benefit in benefits %}
                <li>{{ benefit | strip }}</li>
              {% endfor %}
            </ul>
          {% endif %}
          {% if block.settings.product_price != blank %}
            <div class="ai-influencer-product-price-{{ ai_gen_id }}">{{ block.settings.product_price }}</div>
          {% endif %}
          {% if block.settings.product_offer != blank %}
            <div class="ai-influencer-product-offer-{{ ai_gen_id }}">{{ block.settings.product_offer }}</div>
          {% endif %}
          {% if block.settings.product_cta_text != blank %}
            <a href="{{ block.settings.product_cta_link }}" class="ai-influencer-cta-button-{{ ai_gen_id }}">
              {{ block.settings.product_cta_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </section>
  {% endif %}

  <!-- Results Section -->
  {% if block.settings.show_results %}
    <section class="ai-influencer-section-{{ ai_gen_id }} ai-influencer-results-{{ ai_gen_id }}">
      {% if block.settings.results_title != blank %}
        <h2 class="ai-influencer-section-title-{{ ai_gen_id }}">{{ block.settings.results_title }}</h2>
      {% endif %}
      <div class="ai-influencer-results-grid-{{ ai_gen_id }}">
        {% for i in (1..3) %}
          {% assign image_key = 'results_image_' | append: i %}
          {% assign stat_key = 'results_stat_' | append: i %}
          {% assign desc_key = 'results_desc_' | append: i %}
          
          {% assign image = block.settings[image_key] %}
          {% assign stat = block.settings[stat_key] %}
          {% assign desc = block.settings[desc_key] %}
          
          {% if stat != blank or desc != blank %}
            <div class="ai-influencer-results-item-{{ ai_gen_id }}">
              {% if image %}
                <img 
                  src="{{ image | image_url: width: 400 }}" 
                  alt="{{ image.alt | escape }}"
                  class="ai-influencer-results-image-{{ ai_gen_id }}"
                  loading="lazy"
                >
              {% else %}
                <div class="ai-influencer-results-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
              {% if stat != blank %}
                <div class="ai-influencer-results-stat-{{ ai_gen_id }}">{{ stat }}</div>
              {% endif %}
              {% if desc != blank %}
                <p>{{ desc }}</p>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </section>
  {% endif %}

  <!-- Ingredients Section -->
  {% if block.settings.show_ingredients %}
    <section class="ai-influencer-section-{{ ai_gen_id }} ai-influencer-ingredients-{{ ai_gen_id }}">
      {% if block.settings.ingredients_title != blank %}
        <h2 class="ai-influencer-section-title-{{ ai_gen_id }}">{{ block.settings.ingredients_title }}</h2>
      {% endif %}
      <div class="ai-influencer-ingredients-grid-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% assign name_key = 'ingredient_name_' | append: i %}
          {% assign benefit_key = 'ingredient_benefit_' | append: i %}
          
          {% assign name = block.settings[name_key] %}
          {% assign benefit = block.settings[benefit_key] %}
          
          {% if name != blank or benefit != blank %}
            <div class="ai-influencer-ingredient-item-{{ ai_gen_id }}">
              {% if name != blank %}
                <h4 class="ai-influencer-ingredient-name-{{ ai_gen_id }}">{{ name }}</h4>
              {% endif %}
              {% if benefit != blank %}
                <p class="ai-influencer-ingredient-benefit-{{ ai_gen_id }}">{{ benefit }}</p>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </section>
  {% endif %}

  <!-- Usage Section -->
  {% if block.settings.show_usage %}
    <section class="ai-influencer-section-{{ ai_gen_id }} ai-influencer-usage-{{ ai_gen_id }}">
      {% if block.settings.usage_title != blank %}
        <h2 class="ai-influencer-section-title-{{ ai_gen_id }}">{{ block.settings.usage_title }}</h2>
      {% endif %}
      <div class="ai-influencer-usage-steps-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% assign step_key = 'usage_step_' | append: i %}
          {% assign step = block.settings[step_key] %}
          
          {% if step != blank %}
            <div class="ai-influencer-usage-step-{{ ai_gen_id }}">
              <div class="ai-influencer-usage-step-number-{{ ai_gen_id }}">{{ i }}</div>
              <p class="ai-influencer-usage-step-text-{{ ai_gen_id }}">{{ step }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </section>
  {% endif %}

  <!-- Urgency Section -->
  {% if block.settings.show_urgency %}
    <section class="ai-influencer-section-{{ ai_gen_id }} ai-influencer-urgency-{{ ai_gen_id }}">
      {% if block.settings.urgency_title != blank %}
        <h2 class="ai-influencer-section-title-{{ ai_gen_id }}">{{ block.settings.urgency_title }}</h2>
      {% endif %}
      {% if block.settings.urgency_offer != blank %}
        <p class="ai-influencer-urgency-offer-{{ ai_gen_id }}">{{ block.settings.urgency_offer }}</p>
      {% endif %}
      {% if block.settings.show_countdown %}
        <div class="ai-influencer-countdown-{{ ai_gen_id }}" data-countdown-end="{{ block.settings.countdown_end }}">
          <div class="ai-influencer-countdown-item-{{ ai_gen_id }}">
            <span class="ai-influencer-countdown-number-{{ ai_gen_id }}" data-days>00</span>
            <span class="ai-influencer-countdown-label-{{ ai_gen_id }}">Days</span>
          </div>
          <div class="ai-influencer-countdown-item-{{ ai_gen_id }}">
            <span class="ai-influencer-countdown-number-{{ ai_gen_id }}" data-hours>00</span>
            <span class="ai-influencer-countdown-label-{{ ai_gen_id }}">Hours</span>
          </div>
          <div class="ai-influencer-countdown-item-{{ ai_gen_id }}">
            <span class="ai-influencer-countdown-number-{{ ai_gen_id }}" data-minutes>00</span>
            <span class="ai-influencer-countdown-label-{{ ai_gen_id }}">Minutes</span>
          </div>
          <div class="ai-influencer-countdown-item-{{ ai_gen_id }}">
            <span class="ai-influencer-countdown-number-{{ ai_gen_id }}" data-seconds>00</span>
            <span class="ai-influencer-countdown-label-{{ ai_gen_id }}">Seconds</span>
          </div>
        </div>
