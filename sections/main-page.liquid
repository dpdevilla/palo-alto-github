{%- comment -%} sections/main-page.liquid {%- endcomment -%}
{%- liquid
  assign animations_enabled = settings.animations_enabled
  assign animation_anchor = '#Page--' | append: section.id
  assign animation_delay = 150
  assign color_scheme = 'color-' | append: section.settings.color_scheme
-%}

{{ 'template-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #Page--{{ section.id }} {
    --PT: {{ section.settings.padding_top }}px;
    --PB: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

{%- if section.settings.show_page_title or page.content != blank -%}
  <section id="Page--{{ section.id }}"
    class="section-default section-padding {{ color_scheme }}"
    {% if animations_enabled %}
      data-aos-intersection="0.01"
    {% endif %}>
    <div class="wrapper">
      {%- if section.settings.show_page_title -%}
        <h1 class="page-title text-center"
          {% if animations_enabled %}
            data-aos="fade-up"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-delay="{{ animation_delay }}"
            {%- assign animation_delay = animation_delay | plus: 150 -%}
          {% endif %}>
          {{- page.title -}}
        </h1>
      {%- endif -%}

      <div class="rte"
        {% if animations_enabled %}
          data-aos="fade-up"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-delay="{{ animation_delay }}"
          {%- assign animation_delay = animation_delay | plus: 150 -%}
        {% endif %}>
        {{- page.content -}}
      </div>
    </div>
  </section>
{%- endif -%}

{% schema %}
  {
    "name": "Page",
    "class": "shopify-section--page",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_page_title",
        "label": "Show page title",
        "default": true
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "scheme-1"
      },
      {
        "type": "header",
        "content": "Section spacing"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 60
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 60
      }
    ]
  }
{% endschema %}