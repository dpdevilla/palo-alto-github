{% schema %}
{
  "name": "Homepage Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Banner Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Banner Image"
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Image Fit",
      "default": "cover",
      "options": [
        {
          "value": "cover",
          "label": "Cover (fills area, may crop)"
        },
        {
          "value": "contain",
          "label": "Contain (no crop, may have space)"
        }
      ]
    },
    {
      "type": "range",
      "id": "banner_height_desktop",
      "label": "Banner Height (Desktop)",
      "min": 300,
      "max": 900,
      "step": 50,
      "unit": "px",
      "default": 600
    },
    {
      "type": "range",
      "id": "banner_height_mobile",
      "label": "Banner Height (Mobile)",
      "min": 250,
      "max": 700,
      "step": 50,
      "unit": "px",
      "default": 400
    },
    {
      "type": "checkbox",
      "id": "enable_overlay",
      "label": "Enable Overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "default": 30
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Homepage Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}
<style>
.homepage-banner {
  position: relative;
  width: 100%;
  overflow: hidden;
}
.homepage-banner__image {
  position: absolute;
  inset: 0;
  background-position: center;
  background-repeat: no-repeat;
}
.homepage-banner__overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.{{ section.settings.overlay_opacity }});
}
.homepage-banner__content {
  position: relative;
  z-index: 2;
  color: #fff;
  text-align: {{ section.settings.content_alignment }};
  padding: 2rem;
}
@media (min-width: 768px) {
  .homepage-banner {
    height: {{ section.settings.banner_height_desktop }}px;
  }
}
@media (max-width: 767px) {
  .homepage-banner {
    height: {{ section.settings.banner_height_mobile }}px;
  }
}
</style>

<div class="homepage-banner">
  <div
    class="homepage-banner__image"
    style="
      background-image: url({{ section.settings.desktop_image | image_url: width: 2000 }});
      background-size: {{ section.settings.image_fit }};
    ">
  </div>

  {% if section.settings.enable_overlay %}
    <div class="homepage-banner__overlay"></div>
  {% endif %}

  <div class="homepage-banner__content">
    {% if section.settings.heading != blank %}
      <h1>{{ section.settings.heading }}</h1>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p>{{ section.settings.subheading }}</p>
    {% endif %}
    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="button">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</div>
