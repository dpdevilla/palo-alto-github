<style>
  #exit-popup-overlay {
    display: none;
    position: fixed;
    z-index: 99999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.65);
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  #exit-popup-box {
    background: #ffffff;
    max-width: 450px;
    width: 100%;
    padding: 25px;
    text-align: center;
    border-radius: 14px;
    box-shadow: 0 10px 35px rgba(0,0,0,0.25);
    position: relative;
  }

  #exit-popup-close {
    position: absolute;
    top: 12px;
    right: 15px;
    font-size: 22px;
    cursor: pointer;
  }

  #promo-img {
    width: 100%;       /* fill the container */
    max-width: 100%;   /* ensure it doesn‚Äôt overflow */
    height: auto;      /* maintain aspect ratio */
    margin: 15px 0;
    display: block;
  }

  .exit-popup-btn {
    background: #1E8693;
    color: #fff;
    padding: 12px 25px;
    border-radius: 8px;
    font-size: 18px;
    cursor: pointer;
    border: none;
    width: 100%;
    margin-top: 15px;
  }

  #countdown-timer {
    font-weight: bold;
    color:rgb(251, 15, 15);
    margin-top: 10px;
    font-size: 20px;
  }

  @media (max-width: 480px) {
    #exit-popup-box {
      max-width: 90%;
      padding: 20px;
    }
  }
</style>

<div id="exit-popup-overlay">
  <div id="exit-popup-box">
    <span id="exit-popup-close">&times;</span>

    <!-- Promo Image -->
    <div>
      <img id="promo-img" src="https://cdn.shopify.com/s/files/1/0633/7786/6990/files/exit-intent-popup.jpg?v=1770627325" alt="Free Beauty Roller Promo">
    </div>

    <!-- Headline -->
    <h4>üéÅ Get a FREE Amethyst Beauty Roller!</h4>

    <!-- Subtext -->
    <p>When you buy any <strong>Self-Care Night Recovery Oil</strong> or <strong>Ageless Concentrate</strong> </br>Limited-time offer!</p>

    <!-- CTA Button -->
    <button id="claim-offer-btn" class="exit-popup-btn">Claim Your Gift</button>

    <!-- Countdown Timer -->
    <div id="countdown-timer">10:00</div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {

  const popup = document.getElementById("exit-popup-overlay");
  const closeBtn = document.getElementById("exit-popup-close");
  const claimBtn = document.getElementById("claim-offer-btn");

  let exitPopupShown = false;
  let countdownSeconds = 10 * 60;
  let countdownInterval;

  if (sessionStorage.getItem("exitPopupShown")) return;

  function showPopup() {
    if (exitPopupShown) return;

    popup.style.display = "flex";
    exitPopupShown = true;
    sessionStorage.setItem("exitPopupShown", "true");

    // Countdown
    countdownInterval = setInterval(() => {
      let minutes = Math.floor(countdownSeconds / 60);
      let seconds = countdownSeconds % 60;
      document.getElementById("countdown-timer").textContent =
        (minutes < 10 ? '0' : '') + minutes + ":" + (seconds < 10 ? '0' : '') + seconds;
      countdownSeconds--;
      if (countdownSeconds < 0) clearInterval(countdownInterval);
    }, 1000);

    // GA4 view event
    if (typeof gtag === 'function') {
      gtag('event', 'exit_popup_view', {
        event_category: 'Popup',
        event_label: 'Free Beauty Roller Exit Popup'
      });
    }
  }

  /* DESKTOP EXIT INTENT */
  document.addEventListener("mouseleave", function(e) {
    if (e.clientY <= 50) {
      showPopup();
    }
  });

  /* MOBILE EXIT INTENT */
  history.pushState(null, null, location.href);
  window.addEventListener("popstate", function () {
    showPopup();
    history.pushState(null, null, location.href);
  });

  let lastScroll = window.scrollY;
  window.addEventListener("scroll", function () {
    let currentScroll = window.scrollY;
    if (currentScroll < lastScroll - 120) {
      showPopup();
    }
    lastScroll = currentScroll;
  });

  /* CLOSE POPUP */
  closeBtn.onclick = function () {
    popup.style.display = "none";
    clearInterval(countdownInterval);
  };

  /* CTA CLICK */
  claimBtn.onclick = function () {
    if (typeof gtag === 'function') {
      gtag('event', 'exit_popup_click', {
        event_category: 'Popup',
        event_label: 'Free Beauty Roller Exit Popup - Claim'
      });
    }
    window.location.href = "/collections/free-beauty-roller-promo"; // redirect to your promo collection or product
  };

});
</script>
<!-- END EXIT POPUP -->


